<form method="POST" action="/products/{% if product.id %}{{ product.id }}{% endif %}">
    {% if product.id %}
        <input type="hidden" name="id" value="{{ product.id }}">
    {% endif %}
    <div>
        <label for="title">Name:</label>
        <input type="text" name="title" id="title" value="{{ product.title }}" />
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" max="2000" min="0" name="price" id="price" value="{{ product.price }}" />
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea name="description" id="description">{{ product.description }}</textarea>
    </div>
    <div>
        <!--if product is checked it is active: yes if product is not checked it is active: no-->
        <label for="is_active">Active:</label>
        <input type="checkbox" name="is_active" id="is_active" {% if product.is_active %}checked{% endif %} />
        
    </div>
    <div>
        <label for="slug">Slug:</label>
        <input type="text" name="slug" id="slug" value="{{ product.slug }}" />
    </div>
    <div>
        <input type="submit" type="submit">
    </div>
</form>