{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>About Image #{{ image.id }}</h2>
    <ul>
        <li>
            <label>ID: </label>{{ image.id }}
        </li>
        <li>
            <label>Variant: </label>{{ variant.title }} 
        </li>
        <li>
            <label>Price: </label>{{ variant.price }}
        </li>
    </ul>
    <p>
        <a href="/images/{{ image.id }}/edit">Edit</a> | <a href="/images/{{ image.id }}/delete">Delete</a>
    </p>
{% endblock %}